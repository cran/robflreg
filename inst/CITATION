
year <- sub("-.*", "", meta$Date)
vers <- paste("R package version", meta$Version)

citHeader("To cite the robflreg package, use:")

bibentry(bibtype = "Manual",
  title = "{robflreg}: Robust Functional Linear Regression",
  author = personList(as.person("Ufuk Beyaztas"), as.person("Han Lin Shang")),
  year = year,
  note = vers,
  url = "https://CRAN.R-project.org/package=robflreg")
